<Page x:Class="Gui.view.Pages.HighScores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gui.view.Pages"
      xmlns:userControls="clr-namespace:Gui.view.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HighScores">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="..\..\Images\back_img.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Height="40" Width="110" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" MouseDown="BackBTN_Click" RenderTransformOrigin="0.515,1.059">
            <userControls:TriviaBox Placeholder="&lt;-" BoxWidth="110" MainColor="#009999" SecondaryColor="#00b3b3" OnChnageColor="#008080" HorizontalBorderWidth="2"/>
        </Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="1000" MaxHeight="700">
            <Viewbox Stretch="Uniform">
                <Grid Height="450" Width="600" Margin="0,10,0,-10" HorizontalAlignment="Center">
                    <Grid Height="440" Width="600" Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                        </Grid.RowDefinitions>

                        <Grid Height="40" Margin="5, 10"  Grid.Row="0">
                            <userControls:TriviaBox x:Name="TriviaBoxScore1"  HorizontalBorderWidth="2"  Placeholder="Loading... score" BoxWidth="600" MainColor="#009999" SecondaryColor="#00b3b3"  OnChnageColor="#009999"/>
                        </Grid>
                        <Grid Height="40" Margin="5, 10"  Grid.Row="1">
                            <userControls:TriviaBox x:Name="TriviaBoxScore2"  HorizontalBorderWidth="2"  Placeholder="Loading... score" BoxWidth="600" MainColor="#009999" SecondaryColor="#00b3b3"  OnChnageColor="#009999"/>
                        </Grid>
                        <Grid Height="40" Margin="5, 10"  Grid.Row="2">
                            <userControls:TriviaBox x:Name="TriviaBoxScore3"  HorizontalBorderWidth="2"  Placeholder="Loading... score" BoxWidth="600" MainColor="#009999" SecondaryColor="#00b3b3"  OnChnageColor="#009999"/>
                        </Grid>
                        <Grid Height="40" Margin="5, 10"  Grid.Row="3">
                            <userControls:TriviaBox x:Name="TriviaBoxScore4"  HorizontalBorderWidth="2"  Placeholder="Loading... score" BoxWidth="600" MainColor="#009999" SecondaryColor="#00b3b3"  OnChnageColor="#009999"/>
                        </Grid>
                        <Grid Height="40" Margin="5, 10"  Grid.Row="4">
                            <userControls:TriviaBox x:Name="TriviaBoxScore5"  HorizontalBorderWidth="2" Placeholder="Loading... score" BoxWidth="600" MainColor="#009999" SecondaryColor="#00b3b3" OnChnageColor="#009999"/>
                        </Grid>

                    </Grid>
                </Grid>
            </Viewbox>
        </Grid>
                


    </Grid>
</Page>
