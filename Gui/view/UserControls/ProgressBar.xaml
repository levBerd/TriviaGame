<UserControl x:Class="Gui.view.UserControls.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gui.view.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="75" BorderBrush="Gray" BorderThickness="2">
            <Grid>
                <Path x:Name="progressPath" Stroke="DodgerBlue" StrokeThickness="8" Width="140" Height="140"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
